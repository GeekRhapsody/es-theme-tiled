<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="detailed">

    <image name="systemLogo" extra="true">
      <maxSize>0.050 1</maxSize>
      <pos>0.045 0.020</pos>
      <origin>0.5 0.5</origin>
      <path>firstfile("${themePath}/art/logos/" + {system:theme} + ".png","${themePath}/art/logos/" + {system:theme} + ".svg")</path>
    </image>

    <textlist name="gamelist">
      <lines>22</lines>
      <primaryColor>${tertiaryColor}</primaryColor>
      <secondaryColor>${tertiaryColor}</secondaryColor>
      <selectorColor></selectorColor>
      <selectedColor>${secondaryColor}</selectedColor>
      <extraTextColor>606060</extraTextColor>
      <!-- extraText color is for texts located between [] or () -->
      <extraTextSelectedColor>A0A0A0</extraTextSelectedColor>
      <forceUppercase>0</forceUppercase>
      <pos>0.021 0.045</pos>
      <size>0.33 0.89</size>
      <alignment>left</alignment>
      <horizontalMargin>0.00</horizontalMargin>
      <fontSize>0.029</fontSize>
      <scrollbarColor>96969620</scrollbarColor>
      <scrollbarCorner>0.49</scrollbarCorner>
      <scrollbarSize>0.0065</scrollbarSize>
      <scrollbarAlignment>outerright</scrollbarAlignment>
      <horizontalMargin>0.005</horizontalMargin>
    </textlist>

    <image name="GameThumbnail" extra="true">
      <path>{game:thumbnail}</path>
      <pos>0.37 0.39</pos>
      <maxSize>0.21 0.32</maxSize>
      <horizontalAlignment>left</horizontalAlignment>
      <verticalAlignment>bottom</verticalAlignment>
      <linearSmooth>true</linearSmooth>
      <zIndex>6</zIndex>
      <scale>1</scale>
    </image>
    <image name="GameMarquee" extra="true">
      <path>{game:marquee}</path>
      <pos>0.73 0.045</pos>
      <size>0.15 0</size>
      <horizontalAlignment>right</horizontalAlignment>
      <verticalAlignment>top</verticalAlignment>
      <linearSmooth>true</linearSmooth>
      <zIndex>6</zIndex>
      <scale>1</scale>
    </image>
    <image name="TheGameImage" extra="true">
      <path>{game:image}</path>
      <pos>0.63 0.360</pos>
      <origin>0.5 0.5</origin>
      <horizontalAlignment>center</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <maxSize>0.430 0.540</maxSize>
      <zIndex>5</zIndex>
      <scale>1</scale>
    </image>

    <text name="labelGameTime" extra="true">
      <text>Play Time</text>
      <pos>0.89 0.045</pos>
      <size>0.23 0</size>
      <alignment>left</alignment>
      <color>${tertiaryColor}</color>
      <fontSize>0.015</fontSize>
      <zIndex>5</zIndex>
    </text>
    <text name="GameTime" extra="true">
      <text>expandseconds({game:gametime})</text>
      <pos>0.89 0.060</pos>
      <size>0.23 0</size>
      <alignment>left</alignment>
      <color>${secondaryColor}</color>
      <fontSize>0.020</fontSize>
      <zIndex>5</zIndex>
    </text>
    <text name="GameTimeNone" extra="true">
      <text>None</text>
      <pos>0.89 0.060</pos>
      <size>0.23 0</size>
      <alignment>left</alignment>
      <color>${secondaryColor}</color>
      <fontSize>0.020</fontSize>
      <zIndex>5</zIndex>
      <visible>empty(expandseconds({game:gametime}))</visible>
    </text>

    <text name="labelDev" extra="true">
      <text>Developer</text>
      <pos>0.89 0.430</pos>
      <size>0.23 0.017</size>
      <alignment>left</alignment>
      <color>${tertiaryColor}</color>
      <fontSize>0.015</fontSize>
      <zIndex>5</zIndex>
    </text>
    <text name="valDeveloper" extra="true">
      <text>{game:developer}</text>
      <pos>0.89 0.445</pos>
      <size>0.23 0.022</size>
      <alignment>left</alignment>
      <color>${secondaryColor}</color>
      <fontSize>0.020</fontSize>
      <zIndex>5</zIndex>
    </text>

    <text name="labelPublisher" extra="true">
      <text>Publisher</text>
      <pos>0.89 0.480</pos>
      <size>0.23 0.017</size>
      <alignment>left</alignment>
      <color>${tertiaryColor}</color>
      <fontSize>0.015</fontSize>
      <zIndex>5</zIndex>
    </text>
    <text name="publisher" extra="true">
      <text>{game:publisher}</text>
      <pos>0.89 0.495</pos>
      <size>0.23 0.022</size>
      <alignment>left</alignment>
      <color>${secondaryColor}</color>
      <fontSize>0.020</fontSize>
      <zIndex>5</zIndex>
    </text>

    <text name="labelReleaseDate" extra="true">
      <text>Release Date</text>
      <pos>0.89 0.530</pos>
      <size>0.89 0.017</size>
      <alignment>left</alignment>
      <color>${tertiaryColor}</color>
      <fontSize>0.015</fontSize>
      <zIndex>5</zIndex>
    </text>
    <text name="ReleaseDate" extra="true">
      <text>{game:releasedate}</text>
      <pos>0.89 0.545</pos>
      <size>0.23 0.022</size>
      <alignment>left</alignment>
      <color>${secondaryColor}</color>
      <fontSize>0.020</fontSize>
      <zIndex>5</zIndex>
    </text>

    <text name="labelDescription" extra="true">
      <text>Description</text>
      <pos>0.37 0.720</pos>
      <size>0.23 0</size>
      <alignment>left</alignment>
      <color>${tertiaryColor}</color>
      <fontSize>0.015</fontSize>
      <zIndex>5</zIndex>
    </text>

    <text name="md_description">
      <text>{game:desc}</text>
      <pos>0.37 0.745</pos>
      <size>0.61 0.20</size>
      <alignment>left</alignment>
      <horizontalAlignment>top</horizontalAlignment>
      <color>${secondaryColor}</color>
      <fontSize>0.020</fontSize>
      <zIndex>5</zIndex>
    </text>

  </view>
</theme>