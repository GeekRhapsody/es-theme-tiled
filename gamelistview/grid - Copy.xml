<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <variables>
    <corners>8 * ${screen.height} / 1080</corners>
    <borderFrame>${themePath}/art/framewsel.png</borderFrame>
    <grid.itemspacing.px>12 * ${screen.height} / 1080</grid.itemspacing.px>
    <grid.paddingtop>0.04</grid.paddingtop>
  </variables>
  
   <view name="grid">
	   
	  <text name="mySystemInfo" extra="true">
		 <text>{system:fullName} ({system:total} Games)</text>
		 <size>1 0</size>
		 <pos>0.0 0.005</pos>
		 <alignment>center</alignment>		 
		 <color>${secondaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.025</fontSize>
		 <zIndex>5</zIndex>	     	  
	  </text>
	 
    <imagegrid name="gamegrid" ifSubset="factbox:no">	
      <pos>0.005 0.04</pos>
      <size>0.99 0.91</size>	
	</imagegrid> 

    <imagegrid name="gamegrid" ifSubset="factbox:yes">	
      <pos>0.005 0.04</pos>
      <size>0.77 0.91</size>	
	</imagegrid> 
   
    <imagegrid name="gamegrid">	
      <autoLayout>0 3</autoLayout>
	  <margin>${grid.itemspacing.px}</margin>
	  <cellProportion>1.3</cellProportion>
	  <padding>0.03 0.009 0.03 0.011</padding>
	  <showVideoAtDelay>800</showVideoAtDelay>	  
      <itemTemplate>			
        <container>		  
          <scale>1</scale>
          <storyboard event="activate">
            <animation property="scale" to="1.03" duration="150" mode="easeOut"/>
          </storyboard>
          <storyboard event="deactivate">
            <animation property="scale" to="1" duration="250" mode="easeOut"/>
          </storyboard>
          <container padding="-8" zIndex="1">
            <ninepatch>
              <pos>0 0</pos>
              <size>1 1</size>
              <path>none</path>
              <cornerSize>20 20</cornerSize>
              <padding>-2 -2</padding>
              <color>000000B0</color>
              <zIndex>3</zIndex>

			<video name="GameVideo" extra="true">
				<path>{game:video}</path>
				<pos>0.5</pos>
				<minSize>1 1</minSize>
				<origin>0.5</origin>
				<delay>0.6</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>			
				<zIndex>51</zIndex> 
			</video>			  
			  
              <storyboard event="activate" repeat="forever">
                <animation property="path" to="${borderFrame}"/>
                <animation property="padding" to="-15 -15"/>
                <animation property="cornerSize" to="36 36"/>
                <animation property="color" from="{secondaryColor}" to="{tertiaryColor}" duration="1500" mode="easeOut"/>
                <animation property="color" from="{tertiaryColor}" to="{secondaryColor}" begin="1500" duration="1500" mode="easeOut"/>
              </storyboard>
              <storyboard event="deactivate">
                <animation property="path" to="$none"/>
                <animation property="color" to="000000B0"/>
                <animation property="padding" to="-2 -2"/>
                <animation property="cornerSize" to="20 20"/>
              </storyboard>				  
            </ninepatch>					

          </container>		  

			<text name="shortName">
			  <pos>0 0.8</pos>
			  <padding>0.020</padding>
			  <size>1 0.2</size>
			  <text>{game:nameShort}</text>
			  <color>D0D0D0</color>			  
			  <verticalAlignment>center</verticalAlignment>
			  <alignment>center</alignment>
			  <fontPath>${themePath}/art/fonts/Cabin-Bold.ttf</fontPath>		  
			  <multiLine>false</multiLine>
			  <fontSize>0.020</fontSize>
			  <glowColor>000000</glowColor>
			  <glowSize>3</glowSize>
			  <visible if="{system.name} == 'Windows'">false</visible>
			</text>		
          <image name="GameImage" extra="true">
			<path>firstfile({game:image},{game:fanart},{game:thumbnail})</path>
            <path if="{system.name} == 'Windows'">{game:thumbnail}</path>
			<default>./art/defgame.png</default>
            <pos>0.5</pos>
            <origin>0.5</origin>
            <minSize>1 1</minSize>
			<horizontalAlignment>center</horizontalAlignment>
			<verticalAlignment>centre</verticalAlignment>
            <linearSmooth>true</linearSmooth>
            <color>FFFFFF90</color>
            <roundCorners>${corners}</roundCorners>
            <zIndex>2</zIndex>
            <scale>1</scale>
            <storyboard event="activate">
			  <animation property="color" to="FFFFFFFF"/>
            </storyboard>
            <storyboard event="deactivate">
              <animation property="color" to="FFFFFF90"/>
            </storyboard>
          </image>		  
        </container>
      </itemTemplate>
    </imagegrid>
    

  <image name="GameThumbnail" extra="true" ifSubset="factbox:yes">
	<path>{game:thumbnail}</path>
	<pos>0.76 0.18</pos>
	<maxSize>0.10 0.19</maxSize>
	<horizontalAlignment>left</horizontalAlignment>
	<verticalAlignment>bottom</verticalAlignment>
	<linearSmooth>true</linearSmooth>
	<zIndex>6</zIndex>
	<scale>1</scale>
  </image>
  <image name="GameMarquee" extra="true" ifSubset="factbox:yes">
	<path>{game:marquee}</path>
	<pos>0.900 0.045</pos>
	<size>0.09 0</size>
	<horizontalAlignment>right</horizontalAlignment>
	<verticalAlignment>top</verticalAlignment>
	<linearSmooth>true</linearSmooth>
	<zIndex>6</zIndex>
	<scale>1</scale>
  </image>  
  <image name="TheGameImage" extra="true" ifSubset="factbox:yes">
	<path>{game:image}</path>
	<pos>0.885 0.213</pos>	
	<origin>0.5 0.5</origin>
	<horizontalAlignment>center</horizontalAlignment>
	<verticalAlignment>center</verticalAlignment>
	<maxSize>0.19 0.295</maxSize>
	<zIndex>5</zIndex>
	<scale>1</scale>
  </image>	  


	
		
 	<text name="labelGameTime" extra="true" ifSubset="factbox:yes">
		 <text>Play Time</text>
		 <pos>0.76 0.380</pos>                
         <size>0.23 0</size>		 
		 <alignment>left</alignment>		 
		 <color>${tertiaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.015</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>
	<text name="GameTime" extra="true" ifSubset="factbox:yes">
		 <text>expandseconds({game:gametime})</text>
		 <pos>0.76 0.395</pos>                
         <size>0.23 0</size>		 
		 <alignment>left</alignment>		 
		 <color>${secondaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.020</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>

 	<text name="labelDev" extra="true" ifSubset="factbox:yes">
		 <text>Developer</text>
		 <pos>0.76 0.430</pos>                
         <size>0.23 0.017</size>		 
		 <alignment>left</alignment>		 
		 <color>${tertiaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.015</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>
	<text name="valDeveloper" extra="true" ifSubset="factbox:yes">
		 <text>{game:developer}</text>
		 <pos>0.76 0.445</pos>                
         <size>0.23 0.022</size>		 
		 <alignment>left</alignment>		 
		 <color>${secondaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.020</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>
	
 	<text name="labelPublisher" extra="true" ifSubset="factbox:yes">
		 <text>Publisher</text>
		 <pos>0.76 0.480</pos>                
         <size>0.23 0.017</size>		 
		 <alignment>left</alignment>		 
		 <color>${tertiaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.015</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>
	<text name="publisher" extra="true" ifSubset="factbox:yes">
		 <text>{game:publisher}</text>
		 <pos>0.76 0.495</pos>                
         <size>0.23 0.022</size>		 
		 <alignment>left</alignment>		 
		 <color>${secondaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.020</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>

 	<text name="labelReleaseDate" extra="true" ifSubset="factbox:yes">
		 <text>Release Date</text>
		 <pos>0.76 0.530</pos>                
         <size>0.23 0.017</size>		 
		 <alignment>left</alignment>		 
		 <color>${tertiaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.015</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>
	<text name="ReleaseDate" extra="true" ifSubset="factbox:yes">
		 <text>{game:releasedate}</text>
		 <pos>0.76 0.545</pos>                
         <size>0.23 0.022</size>		 
		 <alignment>left</alignment>		 
		 <color>${secondaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.020</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>
	
	<text name="md_description" ifSubset="factbox:yes">
		 <text>{game:desc}</text>
		 <pos>0.76 0.62</pos>                
         <size>0.23 0.34</size>		 
		 <alignment>left</alignment>		 
		 <horizontalAlignment>top</horizontalAlignment>
		 <color>${tertiaryColor}</color>
		 <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
		 <fontSize>0.020</fontSize>
		 <zIndex>5</zIndex>	     	  
	</text>	
   </view>  
</theme>