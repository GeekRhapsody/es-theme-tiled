<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="grid">
  <formatVersion>7</formatVersion>
  <variables>
    <shadeStrength>0.3</shadeStrength>
  </variables>

  <subset name="factbox" displayName="Factbox">
    <include name="yes" displayName="Yes"/>
    <include name="no" displayName="No"/>
  </subset>

  <subset name="factboxmedia" displayName="Factbox Media">
    <include name="thumbcart" displayName="Thumbnail + Cartridge"/>
    <include name="mix" displayName="Mix Image"/>
    <include name="image" displayName="Image"/>
    <include name="thumb" displayName="Thumbnail"/>
    <include name="cartridge" displayName="Cartridge"/>
  </subset>

  <subset name="colorway" displayName="Colorway">
    <include name="extradark" displayName="Extra Dark">./colorway/extradark.xml</include>
    <include name="dark" displayName="Dark">./colorway/dark.xml</include>
    <include name="steamos" displayName="Steam OS">./colorway/steamos.xml</include>
  </subset>

  <subset name="font" displayName="Font">
    <include name="cabinbold" displayName="Cabin Bold"/>
    <include name="couture" displayName="Couture"/>
    <include name="nswitchui" displayName="Nintendo Switch UI"/>
    <include name="gb" displayName="GameBoy"/>
  </subset>

  <subset name="fontsize" displayName="Font Size">
    <include name="medium" displayName="Medium">./options/fontmedium.xml</include>
    <include name="small" displayName="Small">./options/fontsmall.xml</include>
    <include name="large" displayName="Large">./options/fontlarge.xml</include>
  </subset>

  <subset name="iconset" displayName="Help Icons">
    <include name="default" displayName="Default"/>
    <include name="arcade" displayName="Arcade"/>
    <include name="psx" displayName="Playstation"/>
    <include name="snes" displayName="SNES"/>
    <include name="switch" displayName="Switch"/>
    <include name="xbox" displayName="XBox"/>
  </subset>

  <subset name="artstyle" displayName="Art Style">
    <include name="modern" displayName="Modern">./art/modern.xml</include>
    <include name="nsoish" displayName="NSOish">./art/nsoish.xml</include>
    <include name="carbon" displayName="Carbon">./art/carbon.xml</include>
    <include name="logos" displayName="Logos">./art/carbon.xml</include>
  </subset>

  <subset name="systemview" displayName="System View">
    <include name="grid" displayName="Grid">./systemview/grid.xml</include>
    <include name="linear" displayName="Linear">./systemview/linear.xml</include>
  </subset>

  <subset name="sysgridsize" displayName="System Grid Size">
    <include name="automatic" displayName="Automatic"/>
    <include name="1x1" displayName="1X1"/>
    <include name="1x2" displayName="1X2"/>
    <include name="1x3" displayName="1X3"/>
    <include name="1x4" displayName="1X4"/>
    <include name="1x5" displayName="1X5"/>
    <include name="1x6" displayName="1X6"/>
    <include name="1x7" displayName="1X7"/>
    <include name="2x1" displayName="2X1"/>
    <include name="2x2" displayName="2X2"/>
    <include name="2x3" displayName="2X3"/>
    <include name="2x4" displayName="2X4"/>
    <include name="2x5" displayName="2X5"/>
    <include name="2x6" displayName="2X6"/>
    <include name="2x7" displayName="2X7"/>
    <include name="3x1" displayName="3X1"/>
    <include name="3x2" displayName="3X2"/>
    <include name="3x3" displayName="3X3"/>
    <include name="3x4" displayName="3X4"/>
    <include name="3x5" displayName="3X5"/>
    <include name="3x6" displayName="3X6"/>
    <include name="3x7" displayName="3X7"/>
    <include name="4x1" displayName="4X1"/>
    <include name="4x2" displayName="4X2"/>
    <include name="4x3" displayName="4X3"/>
    <include name="4x4" displayName="4X4"/>
    <include name="4x5" displayName="4X5"/>
    <include name="4x6" displayName="4X6"/>
    <include name="4x7" displayName="4X7"/>
    <include name="5x1" displayName="5X1"/>
    <include name="5x2" displayName="5X2"/>
    <include name="5x3" displayName="5X3"/>
    <include name="5x4" displayName="5X4"/>
    <include name="5x5" displayName="5X5"/>
    <include name="5x6" displayName="5X6"/>
    <include name="5x7" displayName="5X7"/>
    <include name="6x1" displayName="6X1"/>
    <include name="6x2" displayName="6X2"/>
    <include name="6x3" displayName="6X3"/>
    <include name="6x4" displayName="6X4"/>
    <include name="6x5" displayName="6X5"/>
    <include name="6x6" displayName="6X6"/>
    <include name="6x7" displayName="6X7"/>
    <include name="7x1" displayName="7X1"/>
    <include name="7x2" displayName="7X2"/>
    <include name="7x3" displayName="7X3"/>
    <include name="7x4" displayName="7X4"/>
    <include name="7x5" displayName="7X5"/>
    <include name="7x6" displayName="7X6"/>
    <include name="7x7" displayName="7X7"/>
  </subset>

  <subset name="sysgridcolor" displayName="System Grid Background">
    <include name="blue" displayName="Blue"/>
    <include name="green" displayName="Green"/>
    <include name="red" displayName="Red"/>
    <include name="black" displayName="Black"/>
    <include name="tertiary" displayName="None"/>
  </subset>

  <subset name="gamegridcolor" displayName="Gamelist Grid Background">
    <include name="tertiary" displayName="None"/>
    <include name="blue" displayName="Blue"/>
    <include name="green" displayName="Green"/>
    <include name="red" displayName="Red"/>
    <include name="black" displayName="Black"/>
    <include name="white" displayName="White"/>
  </subset>

  <include>./gamelistview/grid.xml</include>
  <include>./gamelistview/gridthumbnails.xml</include>
  <include>./gamelistview/gridmarquees.xml</include>
  <include>./gamelistview/gridcartridges.xml</include>
  <include>./gamelistview/detailed.xml</include>
  <include>./gamelistview/basic.xml</include>
  <include>./menu.xml</include>
  <include>./gamelistview/factbox.xml</include>

  <view name="system,grid,detailed,basic">
    <image name="background" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <zIndex>2</zIndex>
      <visible>true</visible>
      <color>${backgroundColor}</color>
      <path>./_inc/images/bg_color.png</path>
    </image>


    <helpsystem name="help">
      <fontSize>${fontSizeFooter}</fontSize>
      <pos>0.012 0.957</pos>
      <size>0.3 0.07</size>
      <textColor>${secondaryColor}</textColor>
      <iconColor>${secondaryColor}</iconColor>
      <fontPath ifSubset="font:cabinbold">./_inc/fonts/Cabin-Bold.ttf</fontPath>
      <fontPath ifSubset="font:couture">./_inc/fonts/couture-bld.otf</fontPath>
      <fontPath ifSubset="font:nswitchui">./_inc/fonts/nswitchui.ttf</fontPath>
      <fontPath ifSubset="font:gb">./_inc/fonts/gb.ttf</fontPath>
      <iconA>:/help/buttons_east.svg</iconA>
      <iconB>:/help/buttons_south.svg</iconB>
      <iconX>:/help/buttons_north.svg</iconX>
      <iconY>:/help/buttons_west.svg</iconY>

      <iconUpDown ifSubset="iconset:arcade">./_inc/iconsets/arcade/updown.png</iconUpDown>
      <iconLeftRight ifSubset="iconset:arcade">./_inc/iconsets/arcade/leftright.png</iconLeftRight>
      <iconUpDownLeftRight ifSubset="iconset:arcade">./_inc/iconsets/arcade/all.png</iconUpDownLeftRight>
      <iconA ifSubset="iconset:arcade">./_inc/iconsets/arcade/a.png</iconA>
      <iconB ifSubset="iconset:arcade">./_inc/iconsets/arcade/b.png</iconB>
      <iconX ifSubset="iconset:arcade">./_inc/iconsets/arcade/x.png</iconX>
      <iconY ifSubset="iconset:arcade">./_inc/iconsets/arcade/y.png</iconY>
      <iconL ifSubset="iconset:arcade">./_inc/iconsets/arcade/l.png</iconL>
      <iconR ifSubset="iconset:arcade">./_inc/iconsets/arcade/r.png</iconR>
      <iconStart ifSubset="iconset:arcade">./_inc/iconsets/arcade/start.png</iconStart>
      <iconSelect ifSubset="iconset:arcade">./_inc/iconsets/arcade/select.png</iconSelect>

      <iconUpDown ifSubset="iconset:psx">./_inc/iconsets/psx/updown.png</iconUpDown>
      <iconLeftRight ifSubset="iconset:psx">./_inc/iconsets/psx/leftright.png</iconLeftRight>
      <iconUpDownLeftRight ifSubset="iconset:psx">./_inc/iconsets/psx/all.png</iconUpDownLeftRight>
      <iconA ifSubset="iconset:psx">./_inc/iconsets/psx/a.png</iconA>
      <iconB ifSubset="iconset:psx">./_inc/iconsets/psx/b.png</iconB>
      <iconX ifSubset="iconset:psx">./_inc/iconsets/psx/x.png</iconX>
      <iconY ifSubset="iconset:psx">./_inc/iconsets/psx/y.png</iconY>
      <iconL ifSubset="iconset:psx">./_inc/iconsets/psx/l.png</iconL>
      <iconR ifSubset="iconset:psx">./_inc/iconsets/psx/r.png</iconR>
      <iconStart ifSubset="iconset:psx">./_inc/iconsets/psx/start.png</iconStart>
      <iconSelect ifSubset="iconset:psx">./_inc/iconsets/psx/select.png</iconSelect>

      <iconUpDown ifSubset="iconset:snes">./_inc/iconsets/snes/updown.png</iconUpDown>
      <iconLeftRight ifSubset="iconset:snes">./_inc/iconsets/snes/leftright.png</iconLeftRight>
      <iconUpDownLeftRight ifSubset="iconset:snes">./_inc/iconsets/snes/all.png</iconUpDownLeftRight>
      <iconA ifSubset="iconset:snes">./_inc/iconsets/snes/a.png</iconA>
      <iconB ifSubset="iconset:snes">./_inc/iconsets/snes/b.png</iconB>
      <iconX ifSubset="iconset:snes">./_inc/iconsets/snes/x.png</iconX>
      <iconY ifSubset="iconset:snes">./_inc/iconsets/snes/y.png</iconY>
      <iconL ifSubset="iconset:snes">./_inc/iconsets/snes/l.png</iconL>
      <iconR ifSubset="iconset:snes">./_inc/iconsets/snes/r.png</iconR>
      <iconStart ifSubset="iconset:snes">./_inc/iconsets/snes/start.png</iconStart>
      <iconSelect ifSubset="iconset:snes">./_inc/iconsets/snes/select.png</iconSelect>

      <iconUpDown ifSubset="iconset:switch">./_inc/iconsets/switch/updown.png</iconUpDown>
      <iconLeftRight ifSubset="iconset:switch">./_inc/iconsets/switch/leftright.png</iconLeftRight>
      <iconUpDownLeftRight ifSubset="iconset:switch">./_inc/iconsets/switch/all.png</iconUpDownLeftRight>
      <iconA ifSubset="iconset:switch">./_inc/iconsets/switch/a.png</iconA>
      <iconB ifSubset="iconset:switch">./_inc/iconsets/switch/b.png</iconB>
      <iconX ifSubset="iconset:switch">./_inc/iconsets/switch/x.png</iconX>
      <iconY ifSubset="iconset:switch">./_inc/iconsets/switch/y.png</iconY>
      <iconL ifSubset="iconset:switch">./_inc/iconsets/switch/l.png</iconL>
      <iconR ifSubset="iconset:switch">./_inc/iconsets/switch/r.png</iconR>
      <iconStart ifSubset="iconset:switch">./_inc/iconsets/switch/start.png</iconStart>
      <iconSelect ifSubset="iconset:switch">./_inc/iconsets/switch/select.png</iconSelect>

      <iconUpDown ifSubset="iconset:xbox">./_inc/iconsets/xbox/updown.png</iconUpDown>
      <iconLeftRight ifSubset="iconset:xbox">./_inc/iconsets/xbox/leftright.png</iconLeftRight>
      <iconUpDownLeftRight ifSubset="iconset:xbox">./_inc/iconsets/xbox/all.png</iconUpDownLeftRight>
      <iconA ifSubset="iconset:xbox">./_inc/iconsets/xbox/a.png</iconA>
      <iconB ifSubset="iconset:xbox">./_inc/iconsets/xbox/b.png</iconB>
      <iconX ifSubset="iconset:xbox">./_inc/iconsets/xbox/x.png</iconX>
      <iconY ifSubset="iconset:xbox">./_inc/iconsets/xbox/y.png</iconY>
      <iconL ifSubset="iconset:xbox">./_inc/iconsets/xbox/l.png</iconL>
      <iconR ifSubset="iconset:xbox">./_inc/iconsets/xbox/r.png</iconR>
      <iconStart ifSubset="iconset:xbox">./_inc/iconsets/xbox/start.png</iconStart>
      <iconSelect ifSubset="iconset:xbox">./_inc/iconsets/xbox/select.png</iconSelect>

    </helpsystem>
  </view>

  <view name="grid,detailed,basic">
    <image name="systemLogo" extra="true">
      <maxSize>0.200 0.039</maxSize>
      <pos>0.012 0.005</pos>
      <padding>0.005 0.005 0.005 0.005</padding>
      <horizontalAlignment>left</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <path>firstfile("${themePath}/art/logos/" + {system:theme} + ".png","${themePath}/art/logos/" + {system:theme} + ".svg")</path>
    </image>
  </view>

  <view name="screen">
    <batteryIndicator name="batteryIndicator">
      <visible>false</visible>
    </batteryIndicator>
    <text name="clock">
      <visible>false</visible>
    </text>

    <controllerActivity name="controllerActivity">
      <pos>0.737 0.957</pos>
      <size ifSubset="fontsize:small">0.250 0.019</size>
      <size ifSubset="fontsize:medium">0.250 0.023</size>
      <size ifSubset="fontsize:large">0.250 0.027</size>
      <itemSpacing>0.003</itemSpacing>
      <horizontalAlignment>right</horizontalAlignment>
      <color>${secondaryColor}</color>
      <imagePath>./art/gamepad.svg</imagePath>
      <gunPath>./art/gun.svg</gunPath>
      <wheelPath>./art/wheel.svg</wheelPath>
      <activityColor>${tertiaryColor}</activityColor>
      <hotkeyColor>${tertiaryColor}</hotkeyColor>
    </controllerActivity>

    <stackpanel name="system-indicators" extra="true">
      <visible>true</visible>
      <h>${fontSizeHeader}</h>
      <size>0.3 0.1</size>
      <pos ifSubset="fontsize:small">0.684 0.013</pos>
      <pos ifSubset="fontsize:medium">0.684 0.010</pos>
      <pos ifSubset="fontsize:large">0.684 0.007</pos>
      <orientation>horizontal</orientation>
      <separator>6</separator>
      <horizontalAlignment>right</horizontalAlignment>
      <reverse>true</reverse>
      <zIndex>55</zIndex>
      <clock name="system-clock" extra="true">
        <color>${secondaryColor}</color>
        <fontSize>${fontSizeHeader}</fontSize>
        <fontPath ifSubset="font:cabinbold">./_inc/fonts/Cabin-Bold.ttf</fontPath>
        <fontPath ifSubset="font:couture">./_inc/fonts/couture-bld.otf</fontPath>
        <fontPath ifSubset="font:nswitchui">./_inc/fonts/nswitchui.ttf</fontPath>
        <fontPath ifSubset="font:gb">./_inc/fonts/gb.ttf</fontPath>
        <lineSpacing>1</lineSpacing>
      </clock>
      <batteryText name="system-battery-text" extra="true">
        <color>${secondaryColor}</color>
        <fontSize>${fontSizeHeader}</fontSize>
        <fontPath ifSubset="font:cabinbold">./_inc/fonts/Cabin-Bold.ttf</fontPath>
        <fontPath ifSubset="font:couture">./_inc/fonts/couture-bld.otf</fontPath>
        <fontPath ifSubset="font:nswitchui">./_inc/fonts/nswitchui.ttf</fontPath>
        <fontPath ifSubset="font:gb">./_inc/fonts/gb.ttf</fontPath>
        <lineSpacing>1</lineSpacing>
      </batteryText>
      <batteryIcon name="system-battery-icon" extra="true">
        <maxSize>1 0.88</maxSize>
        <color>${secondaryColor}</color>
        <full>./_inc/images/battery-icon-100.svg</full>
        <at75>./_inc/images/battery-icon-75.svg</at75>
        <at50>./_inc/images/battery-icon-50.svg</at50>
        <at25>./_inc/images/battery-icon-25.svg</at25>
        <empty>./_inc/images/battery-icon-0.svg</empty>
        <incharge>./_inc/images/battery-icon-charging.svg</incharge>
        <lineSpacing>1</lineSpacing>
      </batteryIcon>
      <networkIcon name="system-network-icon" extra="true">
        <maxSize>1 0.88</maxSize>
        <color>${secondaryColor}</color>
        <networkIcon>./_inc/images/network-icon-on.svg</networkIcon>
        <planemodeIcon>./_inc/images/network-icon-off.svg</planemodeIcon>
        <lineSpacing>1</lineSpacing>
      </networkIcon>
    </stackpanel>
  </view>

</theme>
